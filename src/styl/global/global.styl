//Global
h1.logo
  font: 400 80px/1.3 'Oleo Script', Helvetica, sans-serif;
  color: #2b2b2b;
  text-shadow: 4px 4px 0px rgba(0,0,0,0.1);

  a:hover
    text-decoration none

div.flash
  button.close
    padding-left 20px


span.help-block li
  list-style-type none

#ajax_spinner
  display none
  text-align center
  padding 20px






/*Word Create Form*/
label[for=word_type_adjective]
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;


#tenses_area
  display none
  margin 15px 0 30px 0

  section.toggle
    .fa-plus, .fa-minus
      display none

    &.active > label:before
      border-top-color white

    &:first-of-type
      margin-top 0

#create_word_btn
  display none
  &.edit_word_btn
    display block

.word_type_area .btn {
  margin-right: 3px;
  padding: 6px 7px;
  margin-bottom: 8px;
  width: 95px;
}

.panel-group
  .panel
    margin-bottom: 20px;

.panel-close
  font-size: 20px;
  margin-top: 4px;

#modal
  .modal_spanish_word
    font-size 25px
    margin-bottom 10px
    span
      font-weight bold

  .modal_translation_group
    border 1px solid #ECEAEA
    margin-bottom 20px
    .modal_translation_title
      background-color: #0088cc;
      color: white;
      font-size: 20px;
      padding: 10px 20px;
      margin-bottom: 0;

    .inner_content
      padding: 20px 20px 0px 20px;
      .modal_field_value
        span
          font-weight bold












//Quiz Form
form.quiz
  .word_group
    margin-bottom 25px

#quiz_question_area
  border: 3px solid #0088cc;
  min-height: 200px;
  width: 100%;
  margin-bottom: 30px;
  border-radius 6px
  text-align: center;
  padding-top: 40px;

  p#instruction
    font-size 36px
    font-weight bold

  p#quiz_word
    font-size: 43px
    font-weight: 300

#quiz_answer_area
  margin-bottom: 30px;

#quiz_answer
  height 50px





//Word Show Page
div#show_word
  h2
    margin-bottom 5px